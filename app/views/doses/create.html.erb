<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Add a dose for <%= @cocktail.name %></h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :description %>
        <%= f.input :ingredient %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>

    </div>
  </div>

</div>
